{
  "name": "99draft",
  "version": "1.0.0",
  "description": "A modular document editor with core library, React components, and Electron app",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "clean": "turbo run clean",
    "test": "turbo run test"
  },
  "packageManager": "pnpm@10.7.1",
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "@99draft/editor-core": "workspace:*",
      "@99draft/editor-react": "workspace:*"
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "electron",
      "esbuild"
    ]
  }
}
