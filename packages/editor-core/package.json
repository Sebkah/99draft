{
  "name": "@99draft/editor-core",
  "version": "0.0.3",
  "description": "Core editor engine without UI dependencies",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "concurrently \"tsc --watch\" \"pnpm run docs\"",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "dependencies": {
    "docx": "^9.5.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typedoc": "^0.28.14",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
