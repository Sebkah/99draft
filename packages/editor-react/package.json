{
  "name": "@99draft/editor-react",
  "version": "1.0.0",
  "description": "React components for the 99draft editor",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "npm run build:css && tsc",
    "build:css": "npx tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "npm run dev:css --watch && tsc --watch",
    "dev:css": "npx tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@99draft/editor-core": "workspace:*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
