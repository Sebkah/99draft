{
  "name": "@99draft/editor-react",
  "version": "0.0.3",
  "description": "React components for the 99draft editor",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./styles.css": "./src/compiledStyles.css"
  },
  "scripts": {
    "build": "pnpm run build:css && tsup",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "pnpm run dev:css --watch && tsc --watch",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./src/compiledStyles.css --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@99draft/editor-core": "workspace:*",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.0.2"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      "./styles.css": "./dist/styles.css",
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      }
    }
  }
}
