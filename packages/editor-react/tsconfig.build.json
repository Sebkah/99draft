{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": false,
        "incremental": false,
        "noEmit": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
    },
    "include": [
        "src/core/Editor.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
}